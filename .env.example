# Variables d'environnement pour Jarvis MCP
# Copiez ce fichier vers .env et remplissez vos clés API

# Perplexity Pro API (optionnel)
# Obtenez votre clé sur: https://perplexity.ai/
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Claude API (optionnel, pour intégration future)
CLAUDE_API_KEY=your_claude_api_key_here

# Configuration Ollama (par défaut: localhost:11434)
OLLAMA_HOST=localhost:11434

# Ports personnalisés (optionnel)
MCP_HUB_PORT=4000
FRONTEND_PORT=4002
OLLAMA_MCP_PORT=4003
PERPLEXITY_MCP_PORT=4004
MEMORY_MCP_PORT=4005
TOOLS_MCP_PORT=4006

# Configuration Database
DATABASE_URL=sqlite:///app/data/memory.db