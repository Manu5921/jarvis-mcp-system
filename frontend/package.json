{
  "name": "jarvis-mcp-frontend",
  "version": "1.0.0",
  "description": "Frontend React pour Jarvis MCP - Dashboard et interface IA",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
